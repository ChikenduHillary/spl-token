{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"],
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.json"],
  "exclude": ["node_modules", "dist"]
}
